<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <TextView
            android:id="@+id/topPanel"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:text="Hallo Orang Tua Rizky Andika"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:paddingTop="50dp"
            android:textAlignment="center"
            android:background="@drawable/top"/>

    <TextView
            android:layout_below="@id/topPanel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dashboard"
            android:textSize="25dp"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="40dp"/>

    <RelativeLayout
            android:id="@+id/card_1"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginLeft="40dp"
            android:background="@drawable/card"
            android:layout_centerVertical="true">

        <View
                android:id="@+id/circle"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/circle"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"/>

        <TextView
                android:id="@+id/absen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Point Siswa"
                android:textSize="17dp"
                android:textStyle="bold"
                android:layout_below="@id/circle"
                android:layout_marginLeft="10dp"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:text="20 point"
                android:layout_below="@id/absen"/>

    </RelativeLayout>
    <RelativeLayout
            android:id="@+id/card_2"
            android:layout_alignParentRight="true"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/card"
            android:layout_centerVertical="true">

        <View
                android:id="@+id/circle_2"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/circle"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"/>

        <TextView
                android:id="@+id/txt_point"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Point Siswa"
                android:textSize="17dp"
                android:textStyle="bold"
                android:layout_below="@id/circle_2"
                android:layout_marginLeft="10dp"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:text="20 point"
                android:layout_below="@id/txt_point"/>

    </RelativeLayout>
    <RelativeLayout
            android:id="@+id/card_3"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="40dp"
            android:layout_below="@id/card_1"
            android:background="@drawable/card"
            android:layout_centerVertical="true">

        <View
                android:id="@+id/circle"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/circle"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"/>

        <TextView
                android:id="@+id/absen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Point Siswa"
                android:textSize="17dp"
                android:textStyle="bold"
                android:layout_below="@id/circle"
                android:layout_marginLeft="10dp"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:text="20 point"
                android:layout_below="@id/absen"/>

    </RelativeLayout>
    <RelativeLayout
            android:id="@+id/card_4"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/card"
            android:layout_centerVertical="true"
            android:layout_below="@id/card_2"
            android:layout_alignParentRight="true">

        <View
                android:id="@+id/circle"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/circle"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"/>

        <TextView
                android:id="@+id/absen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Point Siswa"
                android:textSize="17dp"
                android:textStyle="bold"
                android:layout_below="@id/circle"
                android:layout_marginLeft="10dp"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:text="20 point"
                android:layout_below="@id/absen"/>

    </RelativeLayout>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="SMKN 1 PURWOSARI"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:paddingTop="5dp"
            android:textAlignment="center"
            android:background="#E056FD"
            android:layout_alignParentBottom="true"/>

</RelativeLayout>